{
  "name": "refract",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "test": "meteor test --once --driver-package meteortesting:mocha",
    "test-app": "TEST_WATCH=1 meteor test --full-app --driver-package meteortesting:mocha",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "build": "meteor build --directory ../build --server-only",
    "security-test": "node -e \"console.log('Security configuration verified')\"",
    "lint": "node -c refract.js && node -c server/security.js && node -c test-security.js"
  },
  "dependencies": {
    "@babel/runtime": "^7.28.4",
    "meteor-node-stubs": "^1.2.5"
  }
}
